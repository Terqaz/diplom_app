{% extends 'base.html.twig' %}

{% block title %}Survey{% endblock %}

{% block body %}
    <h1>Survey</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ survey.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ survey.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ survey.description }}</td>
            </tr>
            <tr>
                <th>IsPrivate</th>
                <td>{{ survey.isPrivate ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_survey_index') }}">back to list</a>

    <a href="{{ path('app_survey_edit', {'id': survey.id}) }}">edit</a>

